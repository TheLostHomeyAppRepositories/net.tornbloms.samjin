{
  "name": {
    "en": "SmartThings Multipurpose Sensor V5"
  },
  "class": "sensor",
  "capabilities": [
     "acceleration",
     "contact_closed",
     "alarm_contact",
     "alarm_battery",
     "measure_battery",
     "measure_temperature"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "zigbee"
  ],
  "zigbee": {
    "manufacturerName": "SmartThings",
    "productId": ["IM6001-MPP01"],
    "endpoints": {
      "1": {
        "clusters": [0, 4, 5, 6],
        "bindings": [6]
      }
    },
    "learnmode": {
      "image": "{{driverAssetsPath}}/images/icon.svg",
      "instruction": {
         "en": "1. Press and Hold the recessed connect button for five (5) seconds.\n2. Release the button when the LED starts blinking red.\n3. The LED will blink red and green while attempting to connect."
      }
    }
  },
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  }
}